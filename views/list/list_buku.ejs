<%- include('../partials/header') %>
<style>
  .card {display:inline-block;}
</style>
<div class="container-fluid">
  <h1 class="text-center bg-light mt-3">Daftar Buku</h1>
  <div class="row d-flex justify-content-between my-4">
    <div class="col-6 col-md-4">
      <a href="/buku/tambah" class="btn btn-primary">Tambah Buku</a>
    </div>
    <div class="col-6 col-md-4">
      <form class="form-inline my-2 my-lg-0 float-right" method="GET">
        <input class="form-control mr-sm-2" placeholder="Cari judul buku" name="search">
        <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </div>
  <div class="row">
    
    <% data.forEach((buku, idx) => { %>
      <div class="card mx-2 my-2" style="width: 18rem;">
        <h5 class="card-title"><%= buku.judul  %></h5>
        <img src="images/<%= buku.gambar %>" class="card-img-top" alt="..." style="max-height: 25rem;">
        <div class="card-body">
          <a href="/buku/ubah/<%= buku.id %>" class="btn btn-warning">Edit</a>
          <a href="/buku/hapus/<%= buku.id %>" class="btn btn-danger">Hapus</a>
        </div>
      </div>

      <% }) %>

  </div>
</div>

<%- include('../partials/footer') %> 